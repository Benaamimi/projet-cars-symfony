{% extends 'base.html.twig' %}

{% block title %}Liste des véhicules{% endblock %}

{% block body %}


<div class="example-wrapper text-center my-4">
    <h1>Liste des véhicules</h1>

    <div class="container mt-5">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>titre</th>
                    <th>marque</th>
                    <th>modele</th>
                    <th>description</th>
                    <th>photo</th>
                    <th>Prix</th>
                    <th>date d'enregistrement</th>
                    <th>option</th>

                </tr>
            </thead>
            <tbody>
                {% for vehicule in vehicules %}
                    
                    <tr>
                        <td>{{ vehicule.id }}</td>
                        <td>{{ vehicule.titre }}</td>
                        <td>{{ vehicule.marque }}</td>
                        <td>{{ vehicule.modele }}</td>
                        <td>{{ vehicule.description|slice(0, 100) }}</td>
                        <td>{{ vehicule.photo }}</td>
                        <td>{{ vehicule.prixjournalier }}</td> 
                        <td>{{ vehicule.dateenregistrement|date('d/m/Y à H:i:s') }}</td> 
                        <td>
                            <a href="{{ path("vehicule_modifier", {id: vehicule.id}) }}" class="text-warning mx-2">modifier</a>

                        <a href="{{ path('vehicule_supprimer', {id: vehicule.id}) }}" class="text-danger">supprimer</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
</div>

   
{% endblock %}